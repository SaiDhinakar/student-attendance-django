{
  "apps": [
    {
      "name": "student-attendance-django",
      "script": "/home/mithun/PROJECT/student-attendance-django/.venv/bin/python3",
      "args": [
        "-m", "uvicorn",
        "StudentAttendance.asgi:application",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--ssl-certfile", "ssl/server.crt",
        "--ssl-keyfile", "ssl/server.key",
        "--workers", "2"
      ],
      "cwd": ".",
      "env": {
        "DJANGO_SETTINGS_MODULE": "StudentAttendance.settings",
        "PYTHONUNBUFFERED": "1"
      },
      "env_production": {
        "DJANGO_SETTINGS_MODULE": "StudentAttendance.settings",
        "PYTHONUNBUFFERED": "1"
      },
      "env_file": ".env",
      "watch": false,
      "autorestart": true,
      "max_restarts": 5,
      "restart_delay": 5000,
      "error_file": "./logs/pm2-err.log",
      "out_file": "./logs/pm2-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z"
    }
  ]
}
