{
  "apps": [
    {
      "name": "student-attendance-django",
      "script": "uv",
      "args": [
        "run",
        "manage.py",
        "runserver",
        "$SERVER_HOST:$SERVER_PORT"
      ],
      "cwd": ".",
      "env": {
        "DJANGO_SETTINGS_MODULE": "StudentAttendance.settings",
        "PYTHONUNBUFFERED": "1"
      },
      "env_file": ".env",
      "watch": false,
      "autorestart": true,
      "max_restarts": 5,
      "restart_delay": 5000,
      "error_file": "./logs/pm2-err.log",
      "out_file": "./logs/pm2-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env_production": {
        "DJANGO_SETTINGS_MODULE": "StudentAttendance.settings",
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}
